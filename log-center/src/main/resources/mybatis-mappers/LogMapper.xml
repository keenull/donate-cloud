<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xshhope.log.dao.LogDao">

	<sql id="where">
		<where>
			<if test="username != null and username != ''">
				<bind name="_username" value="'%' + username + '%'"/>
				and t.username like #{_username}
			</if>
			<if test="module != null and module != ''">
				<bind name="_module" value="'%' + module + '%'"/>
				and t.module like #{_module}
			</if>
			<if test="flag != null and flag != ''">
				and t.flag = #{flag}
			</if>
			<if test="beginTime != null and beginTime != ''">
				and t.createTime &gt;= #{beginTime}
			</if>
			<if test="endTime != null and endTime != ''">
				and DATE(t.createTime) &lt;= #{endTime}
			</if>
		</where>
	</sql>
	<select id="count" resultType="int">
		select count(*) from t_log t
		<include refid="where" />
	</select>

	<select id="findData" resultType="Log">
		select * from t_log t
		<include refid="where" />
		order by t.id desc
		limit #{start}, #{length}
	</select>
</mapper>